<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="DetailLabelTextViewStyle">
        <item name="android:layout_marginBottom">@dimen/tv_detailscreen_label_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/tv_detailscreen_label_margin_left</item>
        <item name="android:layout_marginStart">@dimen/tv_detailscreen_label_margin_start</item>
        <item name="android:textSize">@dimen/tv_detailscreen_label_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="DetailValueTextViewStyle">
        <item name="android:layout_marginTop">@dimen/tv_detailscreen_value_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/tv_detailscreen_value_margin_left</item>
        <item name="android:layout_marginStart">@dimen/tv_detailscreen_value_margin_start</item>
        <item name="android:layout_marginRight">@dimen/tv_detailscreen_value_margin_right</item>
        <item name="android:layout_marginEnd">@dimen/tv_detailscreen_value_margin_end</item>
        <item name="android:textSize">@dimen/tv_detailscreen_text_size</item>
    </style>

</resources>
