<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/play_trailer_img_size"
        android:layout_height="@dimen/play_trailer_img_size"
        app:srcCompat="@drawable/ic_play_arrow_black_24dp"
        android:layout_marginLeft="@dimen/play_trailer_margin_left"
        android:layout_marginStart="@dimen/play_trailer_margin_start"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/play_trailer_margin_top"
        android:contentDescription="@string/play_trailer"
        android:id="@+id/imageView2" />

    <TextView
        android:id="@+id/tv_trailer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Trailer 1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/trailer_text_margin_top"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/trailer_text_margin_bottom"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="@dimen/trailer_text_margin_left"
        android:layout_marginStart="@dimen/trailer_text_margin_start"
        android:layout_marginRight="@dimen/trailer_text_margin_right"
        android:layout_marginEnd="@dimen/trailer_text_margin_end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintVertical_bias="0.521"
        android:textSize="@dimen/trailer_text_size" />

</android.support.constraint.ConstraintLayout>