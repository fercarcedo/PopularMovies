<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/tv_review_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        tools:text="Author:"
        android:textSize="@dimen/review_author_text_size"
        android:layout_margin="@dimen/review_author_text_margin" />

    <TextView android:id="@+id/tv_review_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="This is the review of author for this film, and is really long, and it also spawns multiple lines..."
        android:layout_marginBottom="@dimen/review_content_margin_bottom"
        android:layout_marginLeft="@dimen/review_content_margin_left"
        android:layout_marginStart="@dimen/review_content_margin_start"
        android:layout_marginRight="@dimen/review_content_margin_right"
        android:layout_marginEnd="@dimen/review_content_margin_end"
        android:textSize="@dimen/review_content_text_size"/>

</LinearLayout>